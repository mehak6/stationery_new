@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    scroll-behavior: smooth;
  }

  body {
    @apply text-gray-900 bg-gray-50;
    font-feature-settings: 'rlig' 1, 'calt' 1;
  }

  /* Custom scrollbar */
